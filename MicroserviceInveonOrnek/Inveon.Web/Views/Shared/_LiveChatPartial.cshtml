﻿<div class="bottom-0 position-fixed" style="min-width: 25%; right: 5%;">
    <!-- Header -->
    <div class="rounded-top bg-dark d-flex align-items-center justify-content-between p-2">
        <div class="d-flex align-items-center gap-2 text-white ps-2">
            <i class="fa fa-comments"></i>
            <div>Live Chat</div>
        </div>
        <div class="d-flex align-items-center text-white">
            <i id="arrowButton" class="fa fa-chevron-up" role="button" onclick="ShowMessageArea()"></i>
        </div>
    </div>
    <!-- Message Area -->
    <div class="d-none" id="messageArea">
        <!-- Body -->
        <div id="lastMessages" class="bg-dark p-3 border-top">
        </div>
        <!-- Footer -->
        <div class="pt-2 p-1 bg-dark text-white input-container input-group">
            <input id="message" type="text" class="form-control pe-5 border-0" placeholder="your message...">
            <div class="input-group-append">
                <button id="sendButton" onclick="CreateMessage()" class="btn btn-light"><i class="bi bi-send-fill"></i></button>
            </div>
        </div>
    </div>
</div>